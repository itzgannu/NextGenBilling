<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_items"
    app:cardElevation="@dimen/small_0"
    android:layout_marginBottom="@dimen/base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/base"
        android:gravity="center_vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/card_items_quantity"
            android:layout_width="@dimen/small_0"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="@string/one"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/card_items_image"
            android:layout_width="@dimen/large_58"
            android:layout_height="@dimen/large_58"
            android:layout_marginStart="@dimen/base"
            android:padding="@dimen/small_2"
            android:src="@drawable/basket"
            android:contentDescription="@string/image_content_description"/>

        <LinearLayout
            android:layout_width="@dimen/small_0"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:layout_marginStart="@dimen/base"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_items_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"/>

            <TextView
                android:id="@+id/card_items_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base"
                android:text="@string/pack"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12"/>

        </LinearLayout>

        <TextView
            android:id="@+id/card_items_price"
            android:layout_width="@dimen/small_0"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_marginStart="@dimen/base"
            android:text="@string/one"
            android:textSize="@dimen/text_16"
            android:textColor="@color/black"
            android:textAlignment="center"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>